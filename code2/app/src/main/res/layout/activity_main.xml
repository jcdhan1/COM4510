<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="oak.shef.ac.uk.livedata.EditorView">

	<com.google.android.flexbox.FlexboxLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		app:flexWrap="wrap"
		app:alignItems="stretch"
		app:alignContent="stretch"
		app:showDivider="beginning|middle|end"
		app:dividerDrawable="@drawable/divider"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="220dp"
			app:layout_flexGrow="1"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<EditText
				android:id="@+id/edt_title"
				style="@style/Base.TextAppearance.AppCompat.Medium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/titleWatermark"
				android:inputType="text|textAutoCorrect|textAutoComplete"
				android:maxLines="1"
				android:singleLine="true" />

			<EditText
				android:id="@+id/edt_description"
				style="@style/Base.TextAppearance.AppCompat.Medium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/descriptionWatermark"
				android:inputType="text|textAutoCorrect|textAutoComplete"
				android:maxLines="1"
				android:singleLine="true" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/lbl_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:labelFor="@id/btn_date"
				android:text="@string/dateTimeLabel"
				tools:style="@style/Base.TextAppearance.AppCompat.Small" />
			<Button
				android:id="@+id/btn_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:onClick="setDate"
				android:text="Set Date" />
		</LinearLayout>


	</com.google.android.flexbox.FlexboxLayout>


	<fragment xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:map="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/map"
		android:name="com.google.android.gms.maps.SupportMapFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MapsActivity" />
